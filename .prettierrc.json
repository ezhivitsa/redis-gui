{
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^main/lib/(.*)$",
    "^main/constants/(.*)$",
    "^main(/.*)$",
    "^renderer/types(/.*)?$",
    "^renderer/lib/(.*)$",
    "^renderer/constants/(.*)$",
    "^renderer/data(/.*)?$",
    "^renderer/hooks(/.*)?$",
    "^renderer/stores(/.*)?$",
    "^renderer/ui/(.*)$",
    "^renderer/components/(.*)$",
    "^renderer/scenes/(.*)$",
    "^texts$",
    "^[.][.]/(.*)$",
    "^[.]/components/(.*)$",
    "^([.]|([.]\/(?!.*[.]pcss$)[^\/\\s]+\/?)+)$",
    "[.]pcss$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins" : ["typescript", "jsx", "classProperties", "decorators"]
}
