@import 'variables.pcss';

@import './open-connection_theme_dark.pcss';
@import './open-connection_theme_light.pcss';

.open-connection {
  &:not(:last-of-type) {
    margin-bottom: var(--grid2);
  }

  &__connection,
  &__key {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 2;
    outline: none;
    cursor: pointer;

    & > * {
      z-index: 2;
    }

    &._selected {
      &::before {
        content: '';
        position: absolute;
        top: var(--grid0_5-neg);
        bottom: var(--grid0_5-neg);
        left: -1000px;
        right: -1000px;
        z-index: 1;
      }
    }
  }

  &__arrow-icon {
    margin-right: var(--grid2);
    transition: all 0.2s;

    &._open {
      transform: rotate(90deg);
    }
  }

  &__name {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-left: var(--grid1);
    font-size: var(--font-size-300);
    line-height: var(--font-size-500);

    &._active {
      font-style: italic;
      font-weight: var(--font-weight-600);
    }
  }

  &__content {
    margin-left: var(--grid1);
    padding: var(--grid1) 0 var(--grid0_5) var(--grid3);
    border-left: 1px dashed;
  }

  &__data-item {
    &:not(:last-of-type) {
      margin-bottom: var(--grid1_5);
    }

    &:first-of-type {
      margin-top: var(--grid0_5);
    }
  }

  &__key {
    cursor: pointer;
    user-select: none;
  }

  &__delete-btn {
    margin-left: auto;
  }
}
