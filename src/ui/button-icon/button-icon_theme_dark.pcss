@import 'variables.pcss';

.button-icon_theme_dark {
  &.button-icon {
    opacity: var(--opacity-200);

    &:hover {
      opacity: var(--opacity-50);
    }

    &._view_default {
      color: var(--color-white);
    }

    &._view_danger {
      color: var(--color-red-700);
      opacity: var(--opacity-100);

      &:hover {
        opacity: var(--opacity-50);
      }
    }
  }
}
