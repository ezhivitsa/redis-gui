@import url('variables.pcss');

.test-connect-result {
  &__content {
    margin: var(--grid2) 0;
  }

  &__message {
    display: flex;
    align-items: center;

    &:not(:last-of-type) {
      margin-bottom: var(--grid2);
    }
  }

  &__message-text {
    margin-left: var(--grid2);
  }
}

.test-connect-result_theme_dark,
.test-connect-result_theme_light {
  .test-connect-result {
    &__icon {
      &_type_danger {
        color: var(--color-red-700);
      }

      &_type_success {
        color: var(--color-green-700);
      }
    }
  }
}
