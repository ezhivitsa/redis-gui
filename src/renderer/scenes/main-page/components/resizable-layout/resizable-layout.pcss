@import url('variables.pcss');

@import url('./resizable-layout_theme_dark.pcss');
@import url('./resizable-layout_theme_light.pcss');

.resizable-layout {
  display: flex;
  flex: 1;
  overflow: hidden;

  &_active {
    cursor: ew-resize;
  }

  &__left {
    min-width: 200px;
    max-height: 100%;
    overflow: auto;
    position: relative;
    border-right: 1px solid;
  }

  &__right {
    min-width: 200px;
    flex: 1;
    padding: var(--grid2);
  }

  &__left,
  &__right {
    &_active {
      pointer-events: none;
    }
  }

  &__resizer {
    position: absolute;
    z-index: 2;
    top: 0;
    bottom: 0;
    right: var(--grid0_5-neg);
    width: var(--grid1);
    cursor: ew-resize;
    opacity: 0;
    transition: 0.5s opacity;
    outline: 0;
  }
}
