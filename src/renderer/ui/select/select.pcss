@import 'variables.pcss';

@import './select_theme_dark.pcss';
@import './select_theme_light.pcss';

.select {
  &__label {
    display: block;
    padding-bottom: var(--grid1);

    &_size_s {
      line-height: var(--grid4);
      font-size: var(--font-size-200);
    }

    &_size_m {
      line-height: var(--grid5);
      font-size: var(--font-size-400);
    }
  }

  &__select {
    outline: none;
    box-sizing: border-box;
    border: 0;

    &_size_s {
      height: var(--grid6);
      font-size: var(--font-size-200);
    }

    &_size_m {
      height: var(--grid7);
      font-size: var(--font-size-400);
    }

    &_width_available {
      display: block;
      width: 100%;
    }
  }

  &__select-wrap {
    border-radius: var(--border-radius-200);
    position: relative;
    border: 1px solid;

    &_disabled {
      pointer-events: none;

      &::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        border-radius: var(--border-radius-200);
      }
    }

    &_size_s {
      padding: 0 var(--grid2);
    }

    &_size_m {
      padding: 0 var(--grid2);
    }
  }
}
