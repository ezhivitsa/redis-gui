@import url('variables.pcss');

.button-icon_theme_light {
  &.button-icon {
    opacity: var(--opacity-50);

    &:hover {
      opacity: var(--opacity-150);
    }

    &_view_default {
      color: var(--color-grey-600);
    }

    &_view_danger {
      color: var(--color-red-700);
      opacity: var(--opacity-100);

      &:hover {
        opacity: var(--opacity-50);
      }
    }
  }
}
